// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "pwsh.exe",
				"args": [
					"-NoProfile",
					"-ExecutionPolicy",
					"Bypass",
					"-Command"
				]
			}
		}
	},
	"linux": {
		"options": {
			"shell": {
				"executable": "/usr/bin/pwsh",
				"args": [
					"-NoProfile",
					"-Command"
				]
			}
		}
	},
	"osx": {
		"options": {
			"shell": {
				"executable": "/usr/local/bin/pwsh",
				"args": [
					"-NoProfile",
					"-Command"
				]
			}
		}
	},
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "./build.ps1 -Task Test",
			"problemMatcher": "$pester",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "pwsh",
					"args": [
						"-NoProfile",
						"-NoLogo",
						"-ExecutionPolicy",
						"Bypass",
						"-Command"
					]
				}
			}
		}
	]
}