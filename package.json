{
  "name": "powershelllocalization",
  "displayName": "PowerShell Localization",
  "description": "View PowerShell localization variables inline.",
  "version": "0.2.0",
  "license": "MIT",
  "author": {
    "name": "Gilbert Sanchez"
  },
  "icon": "static/logo.png",
  "publisher": "PSInclusive",
  "repository": {
    "type": "git",
    "url": "https://github.com/PSInclusive/PowerShellLocalization"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:powershell"
  ],
  "bugs": {
    "url": "https://github.com/PSInclusive/PowerShellLocalization/issues"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "powershell",
        "aliases": [
          "PowerShell",
          "ps1"
        ],
        "extensions": [
          ".ps1",
          ".psd1",
          ".psm1"
        ]
      }
    ],
    "configuration": {
      "title": "PowerShell Localization",
      "properties": {
        "powershellLocalization.enableInlineValues": {
          "type": "boolean",
          "default": false,
          "description": "Enable inline display of localization variable values in PowerShell files during debugging."
        },
        "powershellLocalization.enableDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Enable decoration display of localization variable values in PowerShell files during code writing (Error Lens style)."
        },
        "powershellLocalization.searchExclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/out/**",
            "**/dist/**",
            "**/.git/**"
          ],
          "description": "Configure glob patterns for excluding directories and files from PowerShell module scanning."
        },
        "powershellLocalization.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Set the logging level for the PowerShell Localization extension. Debug logs are only shown when set to 'debug'."
        },
        "powershellLocalization.uiCulture": {
          "type": "string",
          "default": "en-US",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "Specify the UI culture for PowerShell localization data. Use format like 'en-US', 'fr-FR', 'de-DE', etc."
        }
      }
    },
    "commands": [
      {
        "command": "powershellLocalization.switchUICulture",
        "title": "Switch UI Culture",
        "category": "PowerShell Localization"
      },
      {
        "command": "powershellLocalization.setUICultureToEnUs",
        "title": "Set UI Culture to English (en-US)",
        "category": "PowerShell Localization"
      },
      {
        "command": "powershellLocalization.setUICultureToFrFr",
        "title": "Set UI Culture to French (fr-FR)",
        "category": "PowerShell Localization"
      }
    ]
  },
  "scripts": {
    "bootstrap": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File ./build.ps1 -Bootstrap",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File ./build.ps1 -Task Test",
    "vscode:test": "vscode-test",
    "package": "vsce package --allow-missing-repository --out ./out/"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "keywords": [
    "powershell",
    "localization",
    "inline",
    "decorations"
  ]
}